<body style="width: 100%;">

    <!-- Mobile Navbar -->
<div id="mobileNavbar" style="display: none; position: fixed; top: 0; left: 0; width: 100%; z-index: 1000;">
  <div style="background-color: black; padding: 0 16px; height: 75px; display: flex; align-items: center; justify-content: space-between;">
    <svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-list" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M2.5 12.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5z"/>
    </svg>
    <a href="/" style="color: white; text-decoration: none; font-size: 20px;"><span style="color: skyblue;">Read</span>My<span style="color: yellow;">Blog</span></a>
  </div>
  
  <div id="mobile-navbar" class="hidden navbar" style="background-color: black; width: 100%; height: auto; position: absolute; top: 75px; left: 0;">
    <ul style=" gap: 1.5rem; padding-top: 2rem;" class="d-flex flex-column align-items-center justify-content-start list-unstyled">
      <li class="navbar-list"><a class="navbar-contents font1" href="/"><strong>Home</strong></a></li>
      <li class="navbar-list"><a class="navbar-contents font1" href="/myposts"><strong>My Posts</strong></a></li>
      <li class="navbar-list"><a class="navbar-contents font1" href="/post"><strong>Post</strong></a></li>
    </ul>
  </div>
  
  <script>
      $("#hamburger-icon").click(function() {
          $("#mobile-navbar").toggleClass("hidden");
      });
  </script>
  </div>
  
  <!-- Desktop Navbar -->
  <div id="desktopNavbar" style="display: none;">
    <div class="navbar" style="overflow: auto; height: 100vh; position: fixed; top: 0; left: 0; background-color: #000000;">
      <ul style="width: 100%; height: 100%; gap: 1.5rem; padding-top: 2rem;" class="d-flex flex-column align-items-center justify-content-start list-unstyled">
        <li class="navbar-list"><a class="navbar-contents font1" href="/"><strong><span style="color: skyblue;">Read</span>My<span style="color: yellow;">Blog</span></strong></a></li>
        <li class="navbar-list"><a class="navbar-contents font1" href="/"><strong>Home</strong></a></li>
        <li class="navbar-list"><a class="navbar-contents font1" href="/myposts"><strong>My Posts</strong></a></li>
        <li class="navbar-list"><a class="navbar-contents font1" href="/post"><strong>Post</strong></a></li>
      </ul>
    </div>
  </div>
  
  <script>
    function toggleNavbar() {
      const width = window.innerWidth;
      const mobileNavbar = document.getElementById('mobileNavbar');
      const desktopNavbar = document.getElementById('desktopNavbar');
  
      if (width < 769) {
        mobileNavbar.style.display = 'block';
        desktopNavbar.style.display = 'none';
      } else {
        mobileNavbar.style.display = 'none';
        desktopNavbar.style.display = 'block';
      }
    }
  
    // Run on initial load
    toggleNavbar();
  
    // Run on window resize
    window.addEventListener('resize', toggleNavbar);
  </script>